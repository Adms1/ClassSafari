<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_line"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/no_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="0.3"
            android:gravity="center_vertical|center"
            android:paddingLeft="@dimen/_3sdp"
            android:text="01"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_33sdp"
            android:layout_weight="1.3"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:text="Megha Shah"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/phoneno_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1.2"
            android:drawableLeft="@drawable/add_family_mob"
            android:gravity="center|center_vertical"
            android:paddingLeft="@dimen/_1sdp"
            android:text="7843568412"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/paid_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_23sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_weight="0.9"
            android:gravity="center_vertical|center"
            android:text=""
            android:textColor="@color/search_boder"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>