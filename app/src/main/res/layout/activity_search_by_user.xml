<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/first_screen_bg"
        android:orientation="vertical"
        tools:context="com.adms.classsafari.Activites.SearchByUser">

        <LinearLayout
            android:id="@+id/linear_login"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="horizontal">


                <TextView
                    android:id="@+id/login_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingRight="@dimen/_5sdp"
                    android:background="@drawable/orange_line"
                    android:gravity="end"
                    android:text="@string/login"
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="normal" />


            <TextView
                android:id="@+id/login_middle_txt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/_1sdp"
                android:gravity="end"
                android:text="|"
                android:textColor="@color/search_boder"
                android:textSize="@dimen/_14sdp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/regi_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/_1sdp"
                android:background="@drawable/orange_line"
                android:gravity="end"
                android:text="Register"
                android:textColor="@color/blue"
                android:textSize="@dimen/_14sdp"
                android:textStyle="normal" />

        </LinearLayout>

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:src="@drawable/s_c_logo" />

        <LinearLayout
            android:id="@+id/seacr_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_45sdp"
                android:layout_weight="1.8"
                android:background="@drawable/searchbox"
                android:orientation="horizontal">

                <AutoCompleteTextView
                    android:id="@+id/search_class_edt"
                    style="@style/EditText"
                    android:layout_width="@dimen/_146sdp"
                    android:layout_height="@dimen/_37sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/round_edittext"
                    android:hint="@string/search_user"
                    android:imeOptions="actionSearch"
                    android:paddingLeft="@dimen/_4sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/search_txt"
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_37sdp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/search_class"
                    android:drawableLeft="@drawable/search"
                    android:paddingLeft="@dimen/_1sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_weight="1.2"
                android:background="@drawable/locationbox"
                android:orientation="horizontal">

                <AutoCompleteTextView
                    android:id="@+id/location_edt"
                    style="@style/EditText"
                    android:layout_width="@dimen/_115sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/reverse_round_edittext"
                    android:drawableRight="@drawable/location"
                    android:hint="@string/location"
                    android:paddingLeft="@dimen/_9sdp"
                    android:paddingRight="@dimen/_9sdp"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/or_linear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center|center_horizontal"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/orange_line" />

            <TextView
                android:id="@+id/or_txt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_1sdp"
                android:gravity="center"
                android:text="@string/or"
                android:textColor="@color/oragne"
                android:textSize="@dimen/_16sdp"
                android:textStyle="normal" />

            <View
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/orange_line" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="@dimen/_145sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:background="@drawable/lets_play_new">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginLeft="@dimen/_47sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lets_play_txt"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/lets_play"
                        android:textColor="@color/search_boder"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_145sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/lets_study_new">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginLeft="@dimen/_47sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lets_study_txt"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/lets_study"
                        android:textColor="@color/search_boder"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/version_no_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Ver. 12072018.3"
            android:textColor="@color/gray1"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />

    </LinearLayout>
</layout>