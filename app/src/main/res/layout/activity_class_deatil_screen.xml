<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/class_detail_screen"
        android:orientation="vertical"
        android:weightSum="5"
        tools:context="com.adms.classsafari.Activites.ClassDeatilScreen">

        <LinearLayout
            android:id="@+id/header_linear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="@color/blue"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_img"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/search_left" />

                <TextView
                    android:id="@+id/subject_txt"
                    android:layout_width="@dimen/_195sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="@string/subject"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_37sdp">

                    <ImageView
                        android:id="@+id/menu"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/menubar" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:src="@drawable/map" />

                <TextView
                    android:id="@+id/city_txt"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:paddingLeft="@dimen/_3sdp"
                    android:text="@string/city"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/board_txt"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:maxLines="5"
                    android:text="@string/board"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9sdp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/standard_txt"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:gravity="center"
                    android:maxLines="5"
                    android:text="V"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9sdp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/stream_txt"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:maxLines="5"
                    android:text="General"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9sdp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/search_img"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/search_white" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/blue" />

        <LinearLayout
            android:id="@+id/header1_linear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.46"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo_img"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/luncher"
                    android:visibility="visible"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <!--<MultiAutoCompleteTextView-->
                    <!--android:id="@+id/multiautocompe"-->
                    <!--android:layout_width="@dimen/_180sdp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:background="@drawable/round_edittext"-->
                    <!--android:hint="@string/location_add"-->
                    <!--android:textColor="@color/text_color"-->
                    <!--android:textColorHint="@color/text_color"-->
                    <!--android:textSize="@dimen/_12sdp"-->
                    <!--android:textStyle="normal" />-->
                    <EditText
                        android:id="@+id/multiautocompe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:alpha="1"
                        android:background="@drawable/round_edittext"
                        android:enabled="false"
                        android:hint="@string/location_add"
                        android:inputType="textMultiLine"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_color"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/infor_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/location_note"
                        android:textSize="@dimen/_9sdp"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/add_btn"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="@string/button_txt"
                    android:textColor="@color/search_boder"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/recView_linear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.85"
            android:orientation="vertical"
            android:visibility="visible">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/class_list_recView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/no_record_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0.1dp"
            android:layout_weight="3.7"
            android:background="@color/white"
            android:gravity="center"
            android:text="No Class Available..."
            android:textColor="@color/search_boder"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            android:visibility="gone" />

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|end"
            android:elevation="5dp"
            app:itemBackground="@drawable/nav_item_drawable"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:layout_insetEdge="bottom"
            app:menu="@menu/menu_navigation" />
    </LinearLayout>
</layout>