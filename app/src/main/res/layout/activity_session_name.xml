<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.adms.classsafari.Activites.SessionName">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/blue"
            android:elevation="@dimen/_5sdp"
            android:theme="@style/ThemeOverlay.AppCompat.Light">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="left"
                android:src="@drawable/white_arrow" />

            <TextView
                android:id="@+id/session_txt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:gravity="center"
                android:text="@string/session_name"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:fontFamily="monospace"/>
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical"
            android:background="@color/white"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/physics_img"
                android:orientation="horizontal">

            </LinearLayout>
            <!--android:layout_marginLeft="@dimen/_5sdp"-->
            <!--android:layout_marginRight="@dimen/_5sdp"-->
            <LinearLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.98"
                android:layout_below="@+id/center"
                android:orientation="vertical"
                android:layout_marginTop="-50dp">
                <!--<RelativeLayout-->
                <!--android:id="@+id/relativeLayout3"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="@dimen/_1sdp"-->
                <!--android:orientation="vertical">-->
                <!--<LinearLayout-->
                    <!--android:id="@+id/linear1"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content">-->
                    <!--<include layout="@layout/session_card_layout_1" />-->
                <!--</LinearLayout>-->

                <!--</RelativeLayout>-->


                <android.support.v7.widget.RecyclerView
                android:id="@+id/session_list_recView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom_linear"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:layout_below="@id/relativeLayout"
                    android:background="@color/search_boder"
                    android:gravity="bottom|start"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/price_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_35sdp"
                        android:text="â‚¹ 5000/-"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"/>

                    <Button
                        android:id="@+id/book_session_btn"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_65sdp"
                        android:background="@drawable/button_shape"
                        android:text="@string/book_session"
                        android:textColor="@color/text_color"
                        android:fontFamily="monospace"/>
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>