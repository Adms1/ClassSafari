<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_270sdp"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_15sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:background="@color/blue"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:gravity="start"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingTop="@dimen/_8sdp"
                android:text="SORT BY"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/done_txt"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingRight="@dimen/_25sdp"
                android:paddingTop="@dimen/_8sdp"
                android:text="DONE"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:background="#e9e9e9"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/result_txt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:text="35 of 100 Results"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_13sdp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_weight="2.5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price_range_txt_view"
                    android:layout_width="@dimen/_97sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:drawableLeft="@drawable/rs_sort"
                    android:drawablePadding="@dimen/_2sdp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="PRICE RANGE"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_12sdp" />

                <RadioGroup
                    android:id="@+id/range_status_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/low_high_rb"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="1"
                        android:button="@drawable/radio_selector"
                        android:checked="true"
                        android:paddingLeft="@dimen/_3sdp"
                        android:text="Low to High"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_10sdp" />

                    <RadioButton
                        android:id="@+id/high_low_rb"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="1"
                        android:button="@drawable/radio_selector"
                        android:paddingLeft="@dimen/_3sdp"
                        android:text="High to Low"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_10sdp" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@color/dark_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/match_score_txt_view"
                    android:layout_width="@dimen/_97sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:drawableLeft="@drawable/score_sort"
                    android:drawablePadding="@dimen/_2sdp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="MATCH SCORE"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_12sdp" />

                <RadioGroup
                    android:id="@+id/lowest_status_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/lowest_first_rb"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="1"
                        android:button="@drawable/radio_selector"
                        android:checked="true"
                        android:paddingLeft="@dimen/_3sdp"
                        android:text="Lowest First"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_10sdp" />

                    <RadioButton
                        android:id="@+id/highest_first_rb"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="1"
                        android:button="@drawable/radio_selector"
                        android:paddingLeft="@dimen/_3sdp"
                        android:text="Highest First"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_10sdp" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@color/dark_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/star_rating_txt_view"
                    android:layout_width="@dimen/_97sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:drawableLeft="@drawable/star"
                    android:drawablePadding="@dimen/_2sdp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="STAR RATING"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_12sdp" />

                <RadioGroup
                    android:id="@+id/rating_status_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/lowest_first_rating_rb"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="1"
                        android:button="@drawable/radio_selector"
                        android:checked="true"
                        android:paddingLeft="@dimen/_3sdp"
                        android:text="Lowest First"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_10sdp" />

                    <RadioButton
                        android:id="@+id/highest_first_rating_rb"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="1"
                        android:text="Highest First"
                        android:paddingLeft="@dimen/_3sdp"
                        android:button="@drawable/radio_selector"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_10sdp" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@color/dark_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_rating_txt_view"
                    android:layout_width="@dimen/_97sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:drawableLeft="@drawable/user_sort"
                    android:drawablePadding="@dimen/_2sdp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="USER RATING"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_12sdp" />

                <RadioGroup
                    android:id="@+id/user_rating_status_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/lowest_first_user_rb"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="1"
                        android:button="@drawable/radio_selector"
                        android:checked="true"
                        android:paddingLeft="@dimen/_3sdp"
                        android:text="Lowest First"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_10sdp" />

                    <RadioButton
                        android:id="@+id/highest_first_user_rb"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="1"
                        android:text="Highest First"
                        android:paddingLeft="@dimen/_3sdp"
                        android:button="@drawable/radio_selector"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_10sdp" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
