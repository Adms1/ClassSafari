<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        tools:context="com.adms.classsafari.Activites.SessionName">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/blue"
            android:elevation="@dimen/_5sdp"
            android:theme="@style/ThemeOverlay.AppCompat.Light">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="left"
                android:src="@drawable/white_arrow" />

            <TextView
                android:id="@+id/session_txt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_25sdp"

                android:gravity="center"
                android:text="@string/session_name"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.4"
            android:layout_below="@+id/header"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout_ptm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@color/white"
                android:elevation="@dimen/_2sdp"
                android:minHeight="?attr/actionBarSize"
                app:tabIndicatorColor="@color/search_boder"
                app:tabIndicatorHeight="@dimen/_3sdp"
                app:tabMaxWidth="0dp"
                app:tabPaddingEnd="@dimen/_10sdp"
                app:tabPaddingStart="@dimen/_10sdp"
                app:tabSelectedTextColor="@color/search_boder"
                app:tabTextAppearance="@style/MyCustomTabText"
                app:tabTextColor="@color/search_boder" />
             

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"
                android:background="@drawable/dropshadow"
                android:visibility="gone" />

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_1sdp"
                android:scrollbars="vertical" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_linear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:layout_below="@id/main_layout"
            android:background="@color/search_boder"
            android:gravity="bottom|start"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_35sdp"
                android:text="₹ 5000/-"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/book_session_btn"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_65sdp"
                android:background="@drawable/button_shape"
                android:text="@string/book_session"
                android:textColor="@color/text_color"/>
        </LinearLayout>
    </LinearLayout>
</layout>