<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_light"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_line1"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_light"
                android:visibility="visible"
                android:weightSum="4">

                <RadioGroup
                    android:id="@+id/name_rg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="1.85"
                    android:background="@color/blue_light"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/name_rb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:button="@drawable/family_selected_unselected_type"
                        android:checked="false"
                        android:paddingLeft="@dimen/_3sdp"
                        android:tag="1"
                        android:text="@string/academic"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_10sdp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/phone_no_txt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="1"
                    android:background="@color/blue_light"
                    android:gravity="center"
                    android:drawableLeft="@drawable/add_family_mob"
                    android:text="9999999990"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="visible"/>

            </TableRow>
        </TableLayout>
    </LinearLayout>
</layout>