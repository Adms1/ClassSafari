<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sucees_bg"
        android:orientation="vertical"
        android:weightSum="2">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/blue"
            android:elevation="@dimen/_5sdp"
            android:theme="@style/ThemeOverlay.AppCompat.Light">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="left"
                android:src="@drawable/search_left"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/session_txt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center"
                android:text="@string/payment_success"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />
        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_weight="2"
            android:paddingBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/rlTopBar"
                    android:gravity="center"
                    android:paddingBottom="30dp"
                    android:paddingTop="20dp"
                    android:text="RAM LAL PAROTHA HOUSE"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="20dp">

                    <RelativeLayout
                        android:id="@+id/rlInnerBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/imvSuccessFail"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/circle_sucess" />

                        <TextView
                            android:id="@+id/txtSucessFail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imvSuccessFail"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="9dp"
                            android:padding="0dp"
                            android:text="@string/strSuccess"
                            android:textColor="@color/success_green"
                            android:textSize="30sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/txtSucessFailDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtSucessFail"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="9dp"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="@string/strYourTranSucc"
                            android:textColor="@color/success_green"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/rlInnerBox"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/subject_linear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/txtsubjectname_view"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="@dimen/_65sdp"
                                android:text="Subject Name"
                                android:maxLines="1"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textColor="@color/text_color" />

                            <TextView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text=":"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/text_color" />

                            <TextView
                                android:id="@+id/txtsubjectname"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:hint="Subject Name"
                                android:padding="5dp"
                                android:textColor="@color/text_color" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/teacher_name_linear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">


                            <TextView
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="@dimen/_65sdp"
                                android:layout_marginTop="5dp"
                                android:text="Teacher Name"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textColor="@color/text_color" />

                            <TextView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text=":"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/text_color" />

                            <TextView
                                android:id="@+id/txtteachername"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_marginTop="5dp"
                                android:hint="Teacher Name"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textColor="@color/text_color" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/date_linear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="@dimen/_65sdp"
                                android:layout_marginTop="5dp"
                                android:text="Start Date"
                                android:maxLines="1"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textColor="@color/text_color" />

                            <TextView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text=":"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/text_color" />

                            <TextView
                                android:id="@+id/txtdate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:hint="Date"
                                android:maxLines="1"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textColor="@color/text_color" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/time_linear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:text="Start Time"
                                android:layout_marginLeft="@dimen/_65sdp"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textColor="@color/text_color" />

                            <TextView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text=":"
                                android:maxLines="1"

                                android:singleLine="true"
                                android:textColor="@color/text_color" />

                            <TextView
                                android:id="@+id/txttime"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:hint="Time"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textColor="@color/text_color" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/transcation_linear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="@dimen/_65sdp"
                                android:layout_marginTop="5dp"
                                android:text="Transcation Id"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textColor="@color/text_color" />

                            <TextView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text=":"
                                android:maxLines="1"

                                android:singleLine="true"
                                android:textColor="@color/text_color" />

                            <TextView
                                android:id="@+id/txtTransactionID"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:hint="Txn ID"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textColor="@color/text_color" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/amount_linear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="@dimen/_65sdp"
                                android:layout_marginTop="5dp"
                                android:text="Amount"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textColor="@color/text_color" />

                            <TextView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text=":"

                                android:maxLines="1"
                                android:singleLine="true"

                                android:textColor="@color/text_color" />

                            <TextView
                                android:id="@+id/txtValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txtNarration"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:hint="@string/strValue"
                                android:maxLines="5"
                                android:padding="5dp"
                                android:textColor="@color/text_color" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnNewCharge"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_below="@+id/btnCharge"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/blue_btn"
                            android:text="Done"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>