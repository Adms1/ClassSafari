<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_light"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_line1"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_light"
                android:visibility="visible"
                android:weightSum="4">

                <TextView
                    android:id="@+id/name_txt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="2.1"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="@dimen/_3sdp"
                    android:text="@string/academic"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/phone_no_txt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="1"
                    android:background="@color/blue_light"
                    android:drawableLeft="@drawable/mobile"
                    android:drawableTint="@color/gray1"
                    android:gravity="center"
                    android:text="9999999990"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@id/edit_img"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_17sdp"
                    android:layout_weight="0.8"
                    android:paddingLeft="@dimen/_11sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/edit_g" />

                <ImageView
                    android:id="@+id/delete_img"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_17sdp"
                    android:layout_weight="0.7"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/delete_o"
                    android:visibility="gone"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</layout>