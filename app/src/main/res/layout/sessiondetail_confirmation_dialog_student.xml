<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/session_confirm"
        android:tag="cards main container">

        <LinearLayout
            android:id="@+id/linear_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:text="Please Confirm Your Enrollment"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_14sdp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/session_name_txt"
                    android:layout_width="@dimen/_155sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/session_name"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_12sdp" />

                <RatingBar
                    android:id="@+id/rating_bar"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center_vertical|top"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:theme="@style/RatingBar1" />

                <TextView
                    android:id="@+id/rating_user_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text=""
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tutor_name_txt"
                    android:layout_width="@dimen/_155sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:text="@string/tutor"
                    android:textSize="@dimen/_9sdp" />

                <TextView
                    android:id="@+id/location_txt"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_35sdp"
                    android:drawableLeft="@drawable/location_blue"
                    android:drawablePadding="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:text="@string/location"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/start_date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:text="@string/start_date"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/end_date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_32sdp"
                    android:text="@string/end_date"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/price_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_45sdp"
                    android:text=""
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@color/search_boder" />

                <View
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_23sdp"
                    android:background="@color/search_boder" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/monday_btn"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:alpha="0.2"
                    android:background="@color/blue"
                    android:text="M"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tuesday_btn"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:alpha="0.2"
                    android:background="@color/blue"
                    android:text="T"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/wednesday_btn"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:alpha="0.2"
                    android:background="@color/blue"
                    android:text="W"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/thursday_btn"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:alpha="0.2"
                    android:background="@color/blue"
                    android:text="Th"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/friday_btn"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:alpha="0.2"
                    android:background="@color/blue"
                    android:text="F"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/saturday_btn"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:alpha="0.2"
                    android:background="@color/blue"
                    android:text="Sa"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/sunday_btn"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_19sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:alpha="0.2"
                    android:background="@color/blue"
                    android:text="Su"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp">

                <TextView
                    android:id="@+id/mon_time_txt"
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:alpha="0.2"
                    android:text="00:00 AM"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/tues_time_txt"
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:alpha="0.2"
                    android:text="00:00 AM"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/wed_time_txt"
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:alpha="0.2"
                    android:text="00:00 AM"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/thur_time_txt"
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:alpha="0.2"
                    android:text="00:00 AM"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/fri_time_txt"
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:alpha="0.2"
                    android:text="00:00 AM"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/sat_time_txt"
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:alpha="0.2"
                    android:text="00:00 AM"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/sun_time_txt"
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:alpha="0.2"
                    android:text="00:00 AM"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_3sdp">

                <TextView
                    android:id="@+id/mon_hours_txt"
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:alpha="0.2"
                    android:text=""
                    android:textColor="@color/search_boder"
                    android:textSize="@dimen/_9sdp" />

                <TextView
                    android:id="@+id/tues_hours_txt"
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:alpha="0.2"
                    android:text=""
                    android:textColor="@color/search_boder"
                    android:textSize="@dimen/_9sdp" />

                <TextView
                    android:id="@+id/wed_hours_txt"
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:alpha="0.2"
                    android:text=""
                    android:textColor="@color/search_boder"
                    android:textSize="@dimen/_9sdp" />

                <TextView
                    android:id="@+id/thur_hours_txt"
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:alpha="0.2"
                    android:text=""
                    android:textColor="@color/search_boder"
                    android:textSize="@dimen/_9sdp" />

                <TextView
                    android:id="@+id/fri_hours_txt"
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:alpha="0.2"
                    android:text=""
                    android:textColor="@color/search_boder"
                    android:textSize="@dimen/_9sdp" />

                <TextView
                    android:id="@+id/sat_hours_txt"
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:alpha="0.2"
                    android:text=""
                    android:textColor="@color/search_boder"
                    android:textSize="@dimen/_9sdp" />

                <TextView
                    android:id="@+id/sun_hours_txt"
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:alpha="0.2"
                    android:text=""
                    android:textColor="@color/search_boder"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/duration_txt_view"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="@string/duration"
                    android:textColor="@color/search_boder"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="start|center_vertical"
                    android:text=":"
                    android:textColor="@color/search_boder"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/duration_txt"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_5sdp"
                    android:textColor="@color/search_boder"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:background="@color/white"
                android:orientation="horizontal">

                <!--<TextView-->
                    <!--android:id="@+id/cancel_txt"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="@dimen/_35sdp"-->
                    <!--android:layout_marginRight="@dimen/_1sdp"-->
                    <!--android:layout_weight="0.9"-->
                    <!--android:background="@drawable/submit_shape"-->
                    <!--android:layout_marginLeft="@dimen/_15sdp"-->
                    <!--android:gravity="center_vertical|center"-->
                    <!--android:text="Cancel"-->
                    <!--android:textColor="@color/blue"-->
                    <!--android:textSize="@dimen/_12sdp"-->
                    <!--android:textAllCaps="true"-->
                    <!--android:textStyle="bold"/>-->

                <TextView
                    android:id="@+id/confirm_txt"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/submit_shape"
                    android:gravity="center_vertical|center"
                    android:layout_marginLeft="@dimen/_85sdp"
                    android:text="Confirm"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_12sdp"
                    android:textAllCaps="true"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>