<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:tag="cards main container">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="@dimen/_10sdp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/linear_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/session_name_txt"
                        android:layout_width="@dimen/_155sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/session_name"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_13sdp" />

                    <RatingBar
                        android:id="@+id/rating_bar"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center_vertical|top"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:theme="@style/RatingBar1" />

                    <TextView
                        android:id="@+id/rating_user_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tutor_name_txt"
                        android:layout_width="@dimen/_155sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:text="@string/tutor"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/location_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:drawableLeft="@drawable/location_blue"
                        android:layout_gravity="right"
                        android:gravity="center_vertical|right"
                        android:drawablePadding="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:text="@string/location"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/start_date_txt"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:text="@string/start_date"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/end_date_txt"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_32sdp"
                        android:text="@string/end_date"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/price_txt"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="Free"
                        android:paddingRight="@dimen/_10sdp"
                        android:gravity="right"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@color/search_boder" />

                    <View
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_23sdp"
                        android:background="@color/search_boder" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/monday_btn"
                        android:layout_width="21dp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:alpha="0.2"
                        android:background="@color/blue"
                        android:text="M"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/tuesday_btn"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:alpha="0.2"
                        android:background="@color/blue"
                        android:text="T"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/wednesday_btn"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:alpha="0.2"
                        android:background="@color/blue"
                        android:text="W"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/thursday_btn"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:alpha="0.2"
                        android:background="@color/blue"
                        android:text="Th"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/friday_btn"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:alpha="0.2"
                        android:background="@color/blue"
                        android:text="F"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/saturday_btn"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:alpha="0.2"
                        android:background="@color/blue"
                        android:text="Sa"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/sunday_btn"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_19sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:alpha="0.2"
                        android:background="@color/blue"
                        android:text="Su"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp">

                    <TextView
                        android:id="@+id/mon_time_txt"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:alpha="0.2"
                        android:text=""
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:id="@+id/tues_time_txt"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:alpha="0.2"
                        android:text=""
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:id="@+id/wed_time_txt"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:alpha="0.2"
                        android:text=""
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:id="@+id/thur_time_txt"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:alpha="0.2"
                        android:text=""
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:id="@+id/fri_time_txt"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:alpha="0.2"
                        android:text=""
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:id="@+id/sat_time_txt"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:alpha="0.2"
                        android:text=""
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:id="@+id/sun_time_txt"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:alpha="0.2"
                        android:text=""
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp">

                    <TextView
                        android:id="@+id/mon_hours_txt"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:alpha="0.2"
                        android:text=""
                        android:textColor="@color/search_boder"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/tues_hours_txt"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:alpha="0.2"
                        android:text=""
                        android:textColor="@color/search_boder"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/wed_hours_txt"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:alpha="0.2"
                        android:text=""
                        android:textColor="@color/search_boder"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/thur_hours_txt"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:alpha="0.2"
                        android:text=""
                        android:textColor="@color/search_boder"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/fri_hours_txt"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:alpha="0.2"
                        android:text=""
                        android:textColor="@color/search_boder"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/sat_hours_txt"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:alpha="0.2"
                        android:text=""
                        android:textColor="@color/search_boder"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/sun_hours_txt"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:alpha="0.2"
                        android:text=""
                        android:textColor="@color/search_boder"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp">
                    <Button
                        android:id="@+id/view_more_session_btn"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/gray_btn"
                        android:text="View Details"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/_11sdp" />
                    <Button
                        android:id="@+id/book_session_btn"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_165sdp"
                        android:background="@drawable/round_yello"
                        android:text="Unpaid"
                        android:textColor="@color/search_boder"
                        android:textSize="@dimen/_11sdp"
                        android:visibility="gone"/>
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</layout>